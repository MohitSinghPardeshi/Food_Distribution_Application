<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.StatusActivity">


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/statusBarRL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:backgroundTint="@color/white"
                android:elevation="20dp"
                android:gravity="center_vertical"
                android:padding="8dp"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/trackOrderBackBtIV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:src="@drawable/ic_baseline_arrow_back_24" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="36dp"
                    android:text="Donation Details"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/cancelTrackOrderTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:text="CANCEL"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="225dp"
                    android:layout_marginHorizontal="8dp"
                    android:layout_marginTop="12dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/gradient"
                            android:elevation="8dp" />

                        <ImageView
                            android:id="@+id/donDetailfoodImg"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"
                            android:src="@drawable/foodplaceholder" />

                        <TextView
                            android:id="@+id/donDetailfoodN"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginLeft="24dp"
                            android:layout_marginBottom="12dp"
                            android:elevation="12dp"
                            android:fontFamily="monospace"
                            android:gravity="bottom"
                            android:text="Paneer Masala,Roti,chawal"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                    </RelativeLayout>


                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="8dp"
                        android:layout_marginTop="12dp">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="6dp"
                            android:orientation="vertical"
                            android:padding="4dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="24dp"
                                android:layout_marginHorizontal="8dp"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:weightSum="9">

                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="1dp"
                                    android:layout_weight="4"
                                    android:background="@color/lightGrey" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="21dp"
                                    android:layout_marginHorizontal="6dp"
                                    android:layout_weight="2"
                                    android:fontFamily="sans-serif-medium"
                                    android:gravity="center"
                                    android:lineSpacingExtra="3sp"
                                    android:text="User"
                                    android:textColor="#555252"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:translationY="-1.71sp" />

                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="1dp"
                                    android:layout_weight="4"
                                    android:background="@color/lightGrey" />
                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="8dp"
                                android:layout_marginVertical="5dp"
                                android:orientation="horizontal">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:layout_gravity="center"
                                    app:cardCornerRadius="200dp">

                                    <ImageView
                                        android:id="@+id/donDetaildonIMg"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:src="@drawable/profile_image" />
                                </androidx.cardview.widget.CardView>

                                <TextView
                                    android:id="@+id/donDetaildonName"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginHorizontal="12dp"
                                    android:fontFamily="sans-serif-medium"
                                    android:gravity="center"
                                    android:text="Mohit Pardeshi"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />

                            </LinearLayout>


                        </LinearLayout>


                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="8dp"
                        android:layout_marginVertical="12dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_marginVertical="8dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="24dp"
                                android:gravity="center"
                                android:paddingHorizontal="8dp"
                                android:orientation="horizontal"
                                android:weightSum="9">

                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="1dp"
                                    android:layout_weight="4"
                                    android:background="@color/lightGrey" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="21dp"
                                    android:layout_marginHorizontal="6dp"
                                    android:layout_weight="2"
                                    android:fontFamily="sans-serif-medium"
                                    android:gravity="center"
                                    android:lineSpacingExtra="3sp"
                                    android:text="Status"
                                    android:textColor="#555252"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:translationY="-1.71sp" />

                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="1dp"
                                    android:layout_weight="4"
                                    android:background="@color/lightGrey" />
                            </LinearLayout>


                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_marginBottom="12dp"
                                android:animateLayoutChanges="true"
                                android:layout_marginTop="8dp"
                                android:layout_height="match_parent">

                                <View
                                    android:id="@+id/statusBarTrackOrderRL"
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <TextView
                                    android:id="@+id/orderidTV"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginHorizontal="40dp"
                                    android:layout_marginTop="8dp"
                                    android:elevation="12dp"
                                    android:text="Donation ID"
                                    android:textColor="@color/textSecondary"
                                    android:textSize="14sp"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@id/statusBarTrackOrderRL" />

                                <TextView
                                    android:id="@+id/orderidID"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="3dp"
                                    android:elevation="12dp"
                                    android:text="#CFDR13"
                                    android:textColor="@color/black"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    app:layout_constraintEnd_toEndOf="@+id/orderidTV"
                                    app:layout_constraintStart_toStartOf="@+id/orderidTV"
                                    app:layout_constraintTop_toBottomOf="@id/orderidTV" />

                                <View
                                    android:id="@+id/dividerTrackOrder"
                                    android:layout_width="match_parent"
                                    android:layout_height="2dp"
                                    android:layout_marginTop="8dp"
                                    android:background="#EDEBEB"
                                    app:layout_constraintTop_toBottomOf="@id/orderidID" />

                                <View
                                    android:id="@+id/view"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:background="#99F2F2F2"
                                    app:layout_constraintBottom_toBottomOf="@id/dividerTrackOrder"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@id/statusBarTrackOrderRL" />

                                <View
                                    android:id="@+id/viewOrderPlaced"
                                    android:layout_width="12dp"
                                    android:layout_height="12dp"
                                    android:layout_marginLeft="30dp"
                                    android:layout_marginBottom="24dp"
                                    android:background="@drawable/shape_status_current"
                                    app:layout_constraintBottom_toBottomOf="@+id/orderPlacedImg"
                                    app:layout_constraintStart_toStartOf="parent"
                                    tools:layout_editor_absoluteX="0dp" />

                                <ImageView
                                    android:id="@+id/orderPlacedImg"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_marginLeft="20dp"
                                    android:layout_marginTop="40dp"
                                    android:src="@drawable/orderplaced"
                                    android:visibility="visible"
                                    app:layout_constraintStart_toEndOf="@id/viewOrderPlaced"
                                    app:layout_constraintTop_toBottomOf="@id/dividerTrackOrder" />

                                <TextView
                                    android:id="@+id/donationReqText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="20dp"
                                    android:text="Donation Request Placed"
                                    android:textColor="@color/black"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    app:layout_constraintBottom_toBottomOf="@+id/orderPlacedImg"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintHorizontal_bias="0.0"
                                    app:layout_constraintStart_toEndOf="@+id/orderPlacedImg"
                                    app:layout_constraintTop_toTopOf="@+id/orderPlacedImg"
                                    app:layout_constraintVertical_bias="0.045" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="We have recieved your request."
                                    android:textColor="@color/textSecondary"
                                    android:textSize="12sp"
                                    app:layout_constraintBottom_toBottomOf="@+id/orderPlacedImg"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintHorizontal_bias="0.0"
                                    app:layout_constraintStart_toStartOf="@+id/donationReqText"
                                    app:layout_constraintTop_toBottomOf="@+id/donationReqText"
                                    app:layout_constraintVertical_bias="0.521" />

                                <View
                                    android:id="@+id/viewOrderApproved"
                                    android:layout_width="12dp"
                                    android:layout_height="12dp"
                                    android:layout_marginLeft="30dp"
                                    android:layout_marginBottom="24dp"
                                    android:background="@drawable/shape_status_remaining"
                                    app:layout_constraintBottom_toBottomOf="@+id/orderApprovedImg"
                                    app:layout_constraintStart_toStartOf="parent"
                                    tools:layout_editor_absoluteX="0dp" />

                                <ImageView
                                    android:id="@+id/orderApprovedImg"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_marginLeft="20dp"
                                    android:layout_marginTop="40dp"
                                    android:src="@drawable/orderapproved"
                                    app:layout_constraintStart_toEndOf="@id/viewOrderApproved"
                                    app:layout_constraintTop_toBottomOf="@id/orderPlacedImg" />

                                <TextView
                                    android:id="@+id/donationApprvText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="20dp"
                                    android:text="Request Approved"
                                    android:textColor="@color/black"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    app:layout_constraintBottom_toBottomOf="@+id/orderApprovedImg"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintHorizontal_bias="0.0"
                                    app:layout_constraintStart_toEndOf="@+id/orderApprovedImg"
                                    app:layout_constraintTop_toTopOf="@+id/orderApprovedImg"
                                    app:layout_constraintVertical_bias="0.045" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Your request was accepted by ........"
                                    android:textColor="@color/textSecondary"
                                    android:textSize="12sp"
                                    app:layout_constraintBottom_toBottomOf="@+id/orderApprovedImg"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintHorizontal_bias="0.0"
                                    app:layout_constraintStart_toStartOf="@+id/donationApprvText"
                                    app:layout_constraintTop_toBottomOf="@+id/donationApprvText"
                                    app:layout_constraintVertical_bias="0.521" />

                                <View
                                    android:id="@+id/orderDelivered"
                                    android:layout_width="12dp"
                                    android:layout_height="12dp"
                                    android:layout_marginLeft="30dp"
                                    android:layout_marginBottom="24dp"
                                    android:background="@drawable/shape_status_remaining"
                                    app:layout_constraintBottom_toBottomOf="@+id/orderDeliveredImg"
                                    app:layout_constraintStart_toStartOf="parent"
                                    tools:layout_editor_absoluteX="0dp" />

                                <ImageView
                                    android:id="@+id/orderDeliveredImg"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_marginLeft="20dp"
                                    android:layout_marginTop="40dp"
                                    android:src="@drawable/orderdelivered"
                                    app:layout_constraintStart_toEndOf="@id/orderDelivered"
                                    app:layout_constraintTop_toBottomOf="@id/orderApprovedImg" />

                                <TextView
                                    android:id="@+id/donationDeliveredText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="20dp"
                                    android:text="Donation Delivered!"
                                    android:textColor="@color/black"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    app:layout_constraintBottom_toBottomOf="@+id/orderDeliveredImg"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintHorizontal_bias="0.0"
                                    app:layout_constraintStart_toEndOf="@+id/orderDeliveredImg"
                                    app:layout_constraintTop_toTopOf="@+id/orderDeliveredImg"
                                    app:layout_constraintVertical_bias="0.045" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="We have delivered your request."
                                    android:textColor="@color/textSecondary"
                                    android:textSize="12sp"
                                    app:layout_constraintBottom_toBottomOf="@+id/orderDeliveredImg"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintHorizontal_bias="0.0"
                                    app:layout_constraintStart_toStartOf="@+id/donationDeliveredText"
                                    app:layout_constraintTop_toBottomOf="@+id/donationDeliveredText"
                                    app:layout_constraintVertical_bias="0.521" />

                                <View
                                    android:id="@+id/statusBarA"
                                    android:layout_width="1.5dp"
                                    android:layout_height="0dp"
                                    android:background="@color/greyDark"
                                    app:layout_constraintBottom_toTopOf="@id/viewOrderApproved"
                                    app:layout_constraintEnd_toEndOf="@id/viewOrderPlaced"
                                    app:layout_constraintStart_toStartOf="@id/viewOrderPlaced"
                                    app:layout_constraintTop_toBottomOf="@id/viewOrderPlaced" />

                                <View
                                    android:id="@+id/statusBarB"
                                    android:layout_width="1.5dp"
                                    android:layout_height="0dp"
                                    android:background="@color/greyDark"
                                    app:layout_constraintBottom_toTopOf="@id/orderDelivered"
                                    app:layout_constraintEnd_toEndOf="@id/viewOrderApproved"
                                    app:layout_constraintStart_toStartOf="@id/viewOrderApproved"
                                    app:layout_constraintTop_toBottomOf="@id/viewOrderApproved" />


                            </androidx.constraintlayout.widget.ConstraintLayout>

                        </LinearLayout>


                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="8dp"
                        android:layout_marginVertical="12dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            android:orientation="vertical"
                            android:padding="4dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="24dp"
                                android:layout_marginHorizontal="8dp"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:weightSum="9">

                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="1dp"
                                    android:layout_weight="4"
                                    android:background="@color/lightGrey" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="21dp"
                                    android:layout_marginHorizontal="6dp"
                                    android:layout_weight="3"
                                    android:fontFamily="sans-serif-medium"
                                    android:gravity="center"
                                    android:lineSpacingExtra="3sp"
                                    android:text="Food Details"
                                    android:textColor="#555252"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:translationY="-1.71sp" />

                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="1dp"
                                    android:layout_weight="4"
                                    android:background="@color/lightGrey" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:paddingHorizontal="8dp">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_baseline_history_24" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="12dp"
                                        android:layout_marginTop="8dp"
                                        android:fontFamily="sans-serif-medium"
                                        android:text="Cooking Time"
                                        android:textSize="12sp" />

                                    <TextView
                                        android:id="@+id/donDetailCookTime"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="12dp"
                                        android:layout_marginBottom="8dp"
                                        android:fontFamily="sans-serif-medium"
                                        android:text="2.45 PM"
                                        android:textSize="12sp"
                                        android:textStyle="bold" />
                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:paddingLeft="8dp">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_baseline_person_24" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="12dp"
                                        android:layout_marginTop="4dp"
                                        android:fontFamily="sans-serif-medium"
                                        android:text="Quantity"
                                        android:textSize="12sp" />

                                    <TextView
                                        android:id="@+id/donDetailQnty"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="12dp"
                                        android:layout_marginBottom="8dp"
                                        android:fontFamily="sans-serif-medium"
                                        android:text="For 23 People"
                                        android:textSize="12sp"
                                        android:textStyle="bold" />
                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:paddingLeft="8dp">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_baseline_location_on_24" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="12dp"
                                        android:layout_marginTop="4dp"
                                        android:fontFamily="sans-serif-medium"
                                        android:text="Address"
                                        android:textSize="12sp" />

                                    <TextView
                                        android:id="@+id/donDetailLoc"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="12dp"
                                        android:layout_marginBottom="8dp"
                                        android:fontFamily="sans-serif-medium"
                                        android:text="Nashik,Maharashtra"
                                        android:textSize="12sp"
                                        android:textStyle="bold" />
                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:paddingLeft="8dp">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_baseline_call_24" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="12dp"
                                        android:layout_marginTop="4dp"
                                        android:fontFamily="sans-serif-medium"
                                        android:text="Mobile Number"
                                        android:textSize="12sp" />

                                    <TextView
                                        android:id="@+id/donDetaildonMobNo"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="12dp"
                                        android:layout_marginBottom="8dp"
                                        android:fontFamily="sans-serif-medium"
                                        android:text="914*******"
                                        android:textSize="12sp"
                                        android:textStyle="bold" />
                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>


                    </androidx.cardview.widget.CardView>


                </LinearLayout>

            </LinearLayout>




            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/donDetailBt"
                android:visibility="invisible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="8dp"
                android:layout_marginVertical="12dp"
                android:background="@drawable/authenticate_gradient_bg"
                android:gravity="center"
                android:paddingHorizontal="88dp"
                android:paddingVertical="14dp"
                android:text="Accept"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="20sp" />


        </LinearLayout>


    </androidx.core.widget.NestedScrollView>


</LinearLayout>